<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ricardo.conadapp.PasosASeguirActivity">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_numero_paso"
            android:textStyle="bold"
            android:textColor="@color/icons"
            android:background="@color/primary_text"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PASO 1"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/imagen_pasos_a_seguir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_image"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:id="@+id/layout_pasos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:autoLink="web"
                android:textColorLink="@color/busqueda_primary_dark"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="#66000000"
                android:id="@+id/txt_descripcion_paso"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/icons"
                android:text="@string/aut_paso1" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
